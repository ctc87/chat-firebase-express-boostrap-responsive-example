div(id="form-login")
    form(id="loginForm")
        div(class="form-group")
            label(for="email") Email address:
            input(type="email" class="form-control" id="emailLog" name="email" required)
        div(class="form-group")
            label(for="pwd") Password:
            input(type="password" class="form-control" id="passwordLog" required)
        div(class="form-group")
            span(class="label label-default" id="login_message")
        button(type="submit" class="btn btn-default") Login
div(id="form-logout" style="display:none" )
    form(id="logoutForm")
        div(class="form-group")
            button(type="submit" class="btn btn-default") Logout    